<Window x:Class="AdvanceTrackProject.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AdvanceTrackProject"
        mc:Ignorable="d"
        Title="AdvanceTrackProject" Height="822.4" Width="860">
    <Grid Margin="0,0,-0.2,11.4">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="27*"/>
            <ColumnDefinition Width="50*"/>
            <ColumnDefinition Width="10*"/>
            <ColumnDefinition Width="93*"/>
            <ColumnDefinition Width="220*"/>
            <ColumnDefinition Width="220*"/>
            <ColumnDefinition Width="65*"/>
            <ColumnDefinition Width="18*"/>
            <ColumnDefinition Width="96*"/>
            <ColumnDefinition Width="23*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="16*"/>
            <RowDefinition Height="45*"/>
            <RowDefinition Height="10*"/>
            <RowDefinition Height="35*"/>
            <RowDefinition Height="14*"/>
            <RowDefinition Height="38*"/>
            <RowDefinition Height="430*"/>
            <RowDefinition Height="43*"/>
        </Grid.RowDefinitions>

        <Label Name="fileLbl" Content="Path (.exe)" FontSize="12" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="1,5.6,0,0" Height="25" Width="64" Grid.Row="3" Grid.ColumnSpan="2"/>
        <TextBox Name="fileTb" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" Text="Path to Exectutable File" VerticalAlignment="Top" Width="590" Margin="10,5.6,0,0" Grid.Row="3" Grid.Column="3" Grid.ColumnSpan="5"/>
        <Button Name="browseBtn" Click="browseBtn_Click" Content="Browse..." HorizontalAlignment="Left" VerticalAlignment="Top" Width="96" Margin="18.2,5.6,0,0" Grid.Row="3" Height="23" Grid.Column="7" Grid.ColumnSpan="2"/>

        <Label Name="pathUrlLbl" Content="Path (URL)" FontSize="12" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="1,6,0,0" Height="33" Width="64" Grid.Row="1" Grid.ColumnSpan="2"/>
        <TextBox Name="pathUrlTb" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" Text="Problem Statement URL" VerticalAlignment="Top" Width="590" Margin="10,10,0,0" Grid.Column="3" Grid.ColumnSpan="5" Grid.Row="1"/>
        <Button Name="fetchBtn" Content="Fetch..." Click="fetchBtn_Click" HorizontalAlignment="Left" VerticalAlignment="Top" Width="96" Margin="18.2,10,0,0" Height="23" Grid.Column="7" Grid.Row="1" Grid.ColumnSpan="2"/>

        <DataGrid Name="dataTbl" Grid.ColumnSpan="10" HorizontalAlignment="Left" Height="283" VerticalAlignment="Top" Width="820" Margin="10,223,0,0" Grid.Row="6"/>

        <Label Name="inpLbl" Content="INPUT" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,171,0,0" Grid.Row="6" Grid.ColumnSpan="3" Height="38" Width="159" Grid.Column="1"/>
        <Label Name="expOutLbl" Content= "Expected Output" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="96.6,171,0,0" Grid.Row="6" Height="38" Width="229" Grid.Column="3" Grid.ColumnSpan="2"/>
        <Label Name="prmOutLbl" Content="Program Output" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,171,0,0" Grid.Row="6" Height="38" Width="228" Grid.Column="5"/>
        <Label Name="resLbl"  Content="Result" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="1,171,0,0" Grid.Row="6" Height="38" Width="185" Grid.Column="6" Grid.ColumnSpan="4"/>

        <Button Name="runBtn" Content="Run" HorizontalAlignment="Left" VerticalAlignment="Top" Width="96" Grid.Column="7" Margin="18.2,10,0,0" Grid.Row="7" Height="19" Grid.ColumnSpan="2"/>
        <RichTextBox Name="pblStat" Grid.ColumnSpan="10" HorizontalAlignment="Left" Height="213" Grid.RowSpan="2" VerticalAlignment="Top" Width="823" Margin="7,0.2,0,0" Grid.Row="5">
            <FlowDocument>
                <Paragraph>
                    <Run Text="Problem Statement."/>
                </Paragraph>
            </FlowDocument>
        </RichTextBox>
        <Label Name="tlLbl" Content="Time Limit (in s) -" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="16,0.2,0,0" Grid.Row="7" Height="29" Width="107" Grid.ColumnSpan="4"/>
        <TextBox Name="tlVal" HorizontalAlignment="Left" Height="29" TextWrapping="Wrap" Text="2" VerticalAlignment="Top" Width="120" Grid.Column="3" Margin="56.6,0.2,0,0" Grid.Row="7" Grid.ColumnSpan="2"/>

    </Grid>
</Window>
